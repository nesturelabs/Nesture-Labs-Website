  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --host --port 3000",
    "build": "vite build",
    "build:with-sitemap": "vite build && npm run build:sitemap",
    "preview": "vite preview --host --port 4173",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "vite build --mode analyze",
    "build:production": "vite build --mode production",
    "build:sitemap": "node scripts/generate-sitemap.js || echo '⚠️ Sitemap generation skipped - script not found'",
    "preview:analyze": "npx vite-bundle-analyzer dist",
    "serve": "npx serve dist -s -l 3000",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "rm -rf node_modules package-lock.json && npm install",
    "postbuild": "npm run build:sitemap"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.6.3",
    "react-type-animation": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
